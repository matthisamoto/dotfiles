[alias]
  amend          = commit --amend
  unadd          = reset HEAD
  diff-added     = diff --cached
  stat           = diff --stat -r
  undo-commit    = reset --soft HEAD^
  prep           = rebase -i @{upstream}

  human           = name-rev --name-only
  checkout-ours   = '!f() { git checkout --ours $@ && git add $@; }; f'
  checkout-theirs = '!f() { git checkout --theirs $@ && git add $@; }; f'
  conflicts       = "!f() { git ls-files -u | awk '{print $4}' | sort -u; }; f"
  edit-conflicts  = "!f() { git diff --name-status --diff-filter=U | cut -f2 ; }; $EDITOR `f`"
  new-commits     = !sh -c 'git log $1@{1}..$1@{0} "$@"'
[branch]
  autosetuprebase = always
[color]
  branch = auto
  diff   = auto
  status = auto
  ui     = true
[core]
  excludesfile = /Users/bbuddin/.gitignore
  editor       = vim
[credential]
  helper = osxkeychain
[diff]
  algorithm = patience
[github]
  user = brettbuddin
[help]
  autocorrect = 1
[heroku]
  account = last
[merge]
  tool = vimdiff
  conflictstyle = diff3
[mergetool]
  keepBackup = false
  prompt = false
[push]
  default = current
[user]
  name  = Brett Buddin
  email = brett@buddin.us
[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f
[format]
  pretty = "format:%Cblue%h%Creset %Creset%Cgreen%cn, %cr%Creset : %s%Creset%C(red)%d%Creset"
[status]
  short  = true
  branch = true
